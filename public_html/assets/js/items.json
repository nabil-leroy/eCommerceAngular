body {
  background-color: #343436;
}
body {
  font-family: sans-serif;
  text-align: center;
  background: #222629;
  color:#888
}
ul {
  display: inline-block;
  margin: 0;
  padding:0;
  list-style: none;
  box-shadow: 0 5px 5px #000;
}
a{
  display: inline-block;
  font-weight: bold;
  font-size:23px;
  color:#222;
  text-decoration:none;
  padding: 15px 20px;
}

ul li {
  background: #fff;
  padding:0px;
  position: relative;
  transition: all 0.2s;
  float:left
}

ul li ul{
  padding: 0px;
  margin:0;
  position: absolute;
  top: 57px;
  left: 0;
  box-shadow: none;
  display: none;
}

ul li:hover ul {
  display: block;
}
ul ul li{
  float:none;
}

ul li:hover{
  background: #aef;
  color: #fff;
}
/* skill bar */
* {margin: 0; padding: 0; outline: none;}

h2 {
  font-size: 2.7em;
  font-weight: normal;
  padding: 10px 0 16px 0;
  margin: 0 0 30px;
  text-align:center;
  color:#2187e7;
  text-shadow: 1px 1px 5px #000, 0 0 10px #2187e7, 0 0 20px #2187e7;
  background:#000;
  border-radius:2px;
  border: 1px solid #2187e7;
  box-shadow: 0px 0px 50px -8px #2187e7;
}
h2.plataformas {
  border: 1px solid #9ACD32;
  box-shadow: 0px 0px 50px -8px #9ACD32;
  color: #9ACD32;
  text-shadow: 1px 1px 5px #000, 0 0 10px #9ACD32, 0 0 20px #9ACD32;
}

h2.programas {
  border: 1px solid #FF4500;
  box-shadow: 0px 0px 50px -8px #FF4500;
  color: #FF4500;
  text-shadow: 1px 1px 5px #000, 0 0 10px #FF4500, 0 0 20px #FF4500;
}

img {
-moz-transition-duration:0.7s;
-moz-transition-timing-function:ease;
-webkit-transition-duration:0.7s;
-webkit-transition-timing-function:ease;
transition-duration:0.7s;
transition-timing-function:ease;
width:150px;
height:150px;


}

img:hover {
-moz-transform:rotate(360deg);
-webkit-transform:rotate(360deg);
transform:rotate(360deg);

}

.container {
  width: 90%;
  padding:5%;
  margin: 0 auto;
  overflow: hidden;
}

.col {
  width: 23%;
  margin: 0 5%;
  position: relative;
  float: left;
  font-size: 12px;
  line-height: 2em;
  padding: 5% 0;
}
/*.col { width:101%; }*/
.skill {
  list-style:none;
  padding-top:30px;
}

.skill li {
  margin-bottom:70px;
  width : 300px;
  background:#030303;
  height:6px;
  border-radius:3px;
  border-left:1px solid #111;
  border-top:1px solid #111;
  border-right:1px solid #333;
  border-bottom:1px solid #333;
}

.skill li em {
  position:relative;
  font-style: normal;
  font-size: 14px;
  text-align: center;
  color:#dedede;
  top:-28px;
}

.blueline {
  height: 3px;
  margin: 2px 0;
  background: #2187e7;
  position: absolute;
  box-shadow: 0px 0px 10px 1px rgba(0,198,255,0.6);
  left:0
}
.greenline {
  height: 3px;
  margin: 2px 0;
  background: #9ACD32;
  position: absolute;
  box-shadow: 0px 0px 10px 1px rgba(173, 255, 47,0.4);
  left:0
}
.redline {
  height: 3px;
  margin: 2px 0;
  background: #FF4500;
  position: absolute;
  box-shadow: 0px 0px 10px 1px rgba(255, 69, 0,0.4);
  left:0
}

.titulo      { opacity:1;  animation:titulo 5s ease-out;     }

/*programation*/
.html        { width:60%;  animation:html 2s easee;       }
.css         { width:55%;  animation:css 2s ease-out;        }
.php         { width:50%;  animation:php 2s ease-out;        }
.javascript  { width:30%;  animation:javascript 2s ease-out; }
.jquery      { width:10%;  animation:jquery 2s ease-out;     }

/*programmes*/
.wordpress   { width:70%;  animation:wordpress 2s ease-out;  }
.github  { width:40%;  animation:prestashop 2s ease-out; }
.phpmyadmin      { width:60%;  animation:joomla 2s ease-out;     }
.photoshop     { width:70%;  animation:blogger 2s ease-out;    }
.gimp      { width:20%;  animation:drupal 2s ease-out;     }
.atom      { width:80%;  animation:atom 2s ease-out;     }

/*plateforme*/
.osx { width:90%;  animation:osx 2s ease-out;}
.windows { width:85%;  animation:windows 2s ease-out;}
.linux   { width:80%;  animation:linux 2s ease-out;  }
.linuxlc    { width:20%;  animation:linuxlc 2s ease-out;   }


@keyframes titulo      { 0% { opacity:0; } 100% { opacity:1; }  }

/*programation*/
@keyframes html        { 0% { width:0px; } 100% { width:90%; }  }
@keyframes css         { 0% { width:0px; } 100% { width:95%; }  }
@keyframes php         { 0% { width:0px; } 100% { width:70%; }  }
@keyframes javascript  { 0% { width:0px; } 100% { width:50%; }  }
@keyframes jquery      { 0% { width:0px; } 100% { width:30%; }  }

/*plateformes*/
@keyframes wordpress   { 0% { width:0px; } 100% { width:80%; }  }
@keyframes github  { 0% { width:0px; } 100% { width:60%; }  }
@keyframes phpmyadmin      { 0% { width:0px; } 100% { width:40%; }  }
@keyframes photoshop     { 0% { width:0px; } 100% { width:70%; }  }
@keyframes gimp      { 0% { width:0px; } 100% { width:20%; }  }
@keyframes atom     { 0% { width:0px; } 100% { width:70%; }  }

/*programes*/
@keyframes osx { 0% { width:0px; } 100% { width:90%; }  }
@keyframes windows { 0% { width:0px; } 100% { width:30%; }  }
@keyframes linux   { 0% { width:0px; } 100% { width:70%; }  }
@keyframes linuxlc    { 0% { width:0px; } 100% { width:50%; }  }

/*media queries*/
@media (max-width: 1200px){
  h2 {font-size:2.2em;}
}
@media (max-width: 980px){
  h2 {font-size:1.8em;}
}
@media (max-width: 767px){
  h2 {font-size:1.4em;}
}
@media (max-width: 580px){
  h2 {font-size:1.1em; padding:10px 0;}
}
@media (max-width: 480px){
  h2 {font-size:2.2em; padding: 10px 0 15px 0;}
  .col {width: 90%;}
}

/*Test*/

@keyframes checked-anim {
  50% {
    width: 3000px;
    height: 3000px;
  }
  100% {
    width: 100%;
    height: 100%;
    border-radius: 0;
  }
}
@keyframes not-checked-anim {
  0% {
    width: 3000px;
    height: 3000px;
  }
}
